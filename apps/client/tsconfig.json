{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // "paths": {
    // "@/*": ["./src/*"],
    // "react": ["./node_modules/@types/react"]
    // }
    // "incremental": true,
    // "skipLibCheck": true,
    // "isolatedModules": true,
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "types": ["vitest/globals"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "vitest.config.mts"
  ],
  "exclude": ["node_modules", "public/"]
}
