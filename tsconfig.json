{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@career-compass/api": ["apps/api/src/*"],
      "@career-compass/client": ["apps/client/*"],
      "react": ["apps/client/node_modules/@types/react"]
    },
    "noEmit": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
