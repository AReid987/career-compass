{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "/tailwind/",
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "/tailwind/",
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ],
        "csstree/validator": true
      }
    ]
  },
  "ignoreFiles": ["build/**", "dist/**", "**/reset.css", "**/bootstrap*.css"],
  "cache": true,
  "fix": true
}
